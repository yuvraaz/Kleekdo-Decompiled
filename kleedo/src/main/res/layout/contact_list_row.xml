<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="1.0dip">

        <ImageView
            android:id="@id/contactUserImg"
            android:layout_width="35.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/contactUserImg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:orientation="vertical">

            <TextView
                android:id="@id/contactUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name" />

            <TextView
                android:id="@id/contactUserNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\ 8976857463" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/contactCallAndMsgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/contactUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recentcall" />

            <ImageView
                android:id="@id/contactUserMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:background="@drawable/recentmesseges" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>